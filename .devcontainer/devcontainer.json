{
    "name": "Ruby Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": ["Shopify.rubyLsp", "seatonjiang.gitmoji-vscode", "Castwide.solargraph"],
            "remoteUser": "vscode",
            "settings": {
                "editor.fontSize": 14,
                "editor.tabSize": 4,
                "rubyEsp.enabled": true,
                "terminal.integrated.shell.linux": "/bin/zsh",
                "solargraph.useBundler": true,
                "solargraph.bundlerPath": "bundle"
            }
        }
    },
    "mounts": [
        "source=${env:HOME}/.ssh,target=/auth/.ssh,type=bind",
        "source=${localWorkspaceFolder},target=/app/,type=bind"
    ],
    "postCreateCommand": "bundle install && solargraph download-core && sed -i 's/ZSH_THEME=\".*\"/ZSH_THEME=\"crcandy\"/' ~/.zshrc && exec zsh",
    "remoteUser": "blackjack"
}
